@model IEnumerable<MVCWatches.Models.Watches>

@{
    ViewData["Title"] = "Index";
}

<div class="row col-md-12">
    <h1>Listagem de Relógios</h1>
</div>
<div class="row">
    <div class="col-md-10"></div>
    <div class="col-md-2">
        <a asp-action="Create" class="btn btn-outline-primary">Adicionar Relógio</a>
    </div>
</div><br />

<div class="row col-md-12">
    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Categoria)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Marca)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Valor)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Cor)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Ano)
                </th>
                <th class="estilo_tb">Opções</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Categoria)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Marca)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Valor)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cor)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Ano)
                    </td>
                    <td class="estilo_tb">
                        <div class="text-right">
                            <a asp-action="Edit" class="btn btn-outline-warning btn-sm" asp-route-id="@item.IDWatch">Editar</a>
                            <a asp-action="Details" class="btn btn-outline-info btn-sm" asp-route-id="@item.IDWatch">Detalhes</a>
                            <a asp-action="Delete" class="btn btn-outline-danger btn-sm" asp-route-id="@item.IDWatch">Eliminar</a>
                        </div>                        
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>